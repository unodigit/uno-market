{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npx biome check --apply ${CLAUDE_PLUGIN_ROOT}/src/**/*.{ts,tsx,js,jsx} --files-with-extensions .ts,.tsx,.js,.jsx"
          },
          {
            "type": "command",
            "command": "npx tsc --noEmit --skipLibCheck --project ${CLAUDE_PLUGIN_ROOT}/tsconfig.json"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/run-quality-check.sh --fix --output json",
            "blocking": true
          }
        ]
      }
    ]
  }
}